<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
    package="com.production.kriate.allsms" tools:ignore="UnusedAttribute">

    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.SEND_SMS"/>
    <uses-permission android:name="android.permission.GET_TASKS"/>
    <uses-permission android:name="com.android.vending.BILLING"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/program_title"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ActivitySingle"
            android:label="@string/program_title" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".EditCategoryActivity"
            android:label="@string/header_category_editor" >
        </activity>
        <activity
            android:name=".EditSmsActivity"
            android:label="@string/header_template_editor" >
        </activity>
        <activity
            android:name=".PurchaseActivity"
            android:label="@string/header_purchase_editor" >
        </activity>

    </application>

</manifest>
